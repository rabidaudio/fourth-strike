section.section
  h1.is-size-2 Mark Merch Order Shipped


  .columns
    .column.is-full.is-one-third-desktop

      = 
      = form_for(@merch_fulfillment, url: merch_fulfillments_path, method: :post) do |f|

        = f.hidden_field :bandcamp_sale_id

        = bulma_field(f, :text_field, @merch_fulfillment, :shipped_on, label: 'Shipped on', type: 'date')

        .field
          label.label Production Costs
          .control
            div vue-component="MoneyField" props={name: "merch_fulfillment[production_cost]"}.to_json
            p
              | This should be the cost to produce the item. It should not include shipping costs, 
              | bandcamp fees, or transaction fees; only the cost of the product.

        .field
          .control
            = f.submit "Mark Shipped", class: "button is-link"
